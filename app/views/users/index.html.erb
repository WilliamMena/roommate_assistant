<h1>All Users</h1>


<ul>
<% @users.each do |u| %>
  Name: <%= u.name %>
  <br>
  Email: <%= u.email %>
  <br>
  #link to add to your roommate
  <%= link_to "Add Roommate", roommates_path( :roommate_id => u.id), method: :post%>
  # might just need to create a form.

    <%= form_tag '/roommates' do %>
      <%= hidden_field_tag :roommate_id, "#{u.id}" %>
      <%= submit_tag "Add Roommate" %>
    <% end %>

  <br></br>
<% end %>
</ul>